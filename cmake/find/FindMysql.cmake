#
# 设置包名
#
SET(PROGRAM_NAME Mysql)


#
# 设置路径
#
SET(MYSQL_SOFTWARE_PATH /usr)


#
# 检查路径
#
IF (IS_DIRECTORY ${MYSQL_SOFTWARE_PATH})

	#
	# 输出信息
	#
	MESSAGE(STATUS "Found " ${PROGRAM_NAME} " Directory : " ${MYSQL_SOFTWARE_PATH})

	#
	# 设置路径
	#
	SET(MYSQL_SOFTWARE_LIBRARY_PATH		${MYSQL_SOFTWARE_PATH}/lib64/mysql)
	SET(MYSQL_SOFTWARE_INCLUDE_PATH		${MYSQL_SOFTWARE_PATH}/include/mysql)

ELSE()

	#
	# 输出信息
	#
	MESSAGE(FATAL_ERROR "Not Found " ${PROGRAM_NAME} " Directory : " ${MYSQL_SOFTWARE_PATH})

ENDIF()
